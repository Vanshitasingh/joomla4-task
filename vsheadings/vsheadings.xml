<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade">
	<name>vsheadings</name>
	<author>Vanshita Singh</author>
	<creationDate>April 2022</creationDate>
	<authorEmail>singhvanshita898@gmail.com</authorEmail>
	<authorUrl>https://github.com/Vanshitasingh</authorUrl>
	<version>1.0.0</version>
	<description>A Heading plugin that concatenates your text with all the heading on your site.</description>
	<files>
		<filename plugin="vsheadings">vsheadings.php</filename>
	</files>
	<media folder="media" destination="plg_system_vsheadings">
	</media>
	<languages>
		<language tag="en-GB">language/en-GB.plg_system_vsheadings.ini</language>
	</languages>
	<config>
		<fields name="params"> 
		  <!-- input field -->
			<fieldset name="basic">
				<field
					name="text_input"
					type="text"
					label="HEADINGS_TEXT_VS"
					description="HEADINGS_DESC_VS"
					default="Vanshita"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
